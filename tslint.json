{
	"defaultSeverity": "error",
	"extends": [
		"tslint:recommended"
	],
	"rules": {
		"unified-signatures": false,
		"indent": [true, "tabs"],
		"no-var-keyword": true,
    "quotemark": [
      true,
      "single"
    ],
    "deprecation": {
      "severity": "warning"
    },
		"array-type": false,
		"interface-name": false,
		"no-shadowed-variable": false,
		"arrow-parens": false,
		"trailing-comma": true,
		"ban-types": false,
		"max-line-length": false,
		"variable-name": false,
		"max-classes-per-file": false,
		"object-literal-sort-keys": false,
		"curly": false
	}
}
